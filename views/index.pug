extends layout

block content
  header
    h1= title
    p= subtitle
    p= updateFreq
  ul
    each item in series
      li
        a(href=`/series/${item.id}`)
          h4 #{item.id} series &raquo;
          span= item.description
    li
      a(href='/series/all/in-service') All buses currently in service&nbsp;&raquo;
    li
      a(href='/series/all/stale') All buses #{staleTitle}&nbsp;&raquo;
    li
      a(href='/series/all/out-of-service') All buses #{oosTitle}&nbsp;&raquo;
    li
      a(href='/series/all') All buses &raquo;
    li
      a(href='/roster') Garage rosters &raquo;